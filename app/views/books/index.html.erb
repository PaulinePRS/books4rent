<div class="container mt-3">
  <% @books.each do |book| %>
  <div class="card-book">
    <h1> <%= book.title %> </h1>
    <h2> <%= book.category %> </h2>
    <h2> <%= book.author %> </h2>
    <h2> <%= book.rating %> </h2>
    <%= link_to "Voir les détails du livre", book_path(book), class: 'card-link' %>
    <%= link_to edit_book_path(book.id), data: { confirm: "Update #{book.title}?" } do %>    Edit <% end %>
  </div>
  <% end %>
</div>


