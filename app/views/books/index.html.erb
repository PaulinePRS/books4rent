<div class="d-flex justify-content-between">
  <div class="container mx-4">
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-3">
          <div class="card-style">
            <%= link_to book_path(book) do %>
              <div class="card-img-thumbnail" style='background-image: url("<%= cl_image_path(book.photo.key, height: 300, width: 250, crop: :fill) %>")'>
              </div>
            <% end %>
            <div class="p-2 mt-4">
              <%= link_to book_path(book) do %>
                <h1><%= book.title %></h1>
                <div>
                  <% book.rating.times do %>
                    <span>⭐️</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="map-container">
    <div id="map"
         style="width: 100%; height: 100vh;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>







