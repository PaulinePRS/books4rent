<div class="container mt-3">
  <% @books.each do |book| %>
  <div class="card-book">
    <h1> <%= book.title %> </h1>
    <h2> <%= book.category %> </h2>
    <h2> <%= book.author %> </h2>
    <h2> <%= book.rating %> </h2>
    <%= link_to "Voir les détails du livre", book_path(book), class: 'card-link' %>
    <% if policy(book).update? %>
    <%= link_to edit_book_path(book.id), data: { confirm: "Update #{book.title}?" } do %>    Edit <% end %>
    <% end %>
  </div>
  <% end %>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers= "<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>
</div>


