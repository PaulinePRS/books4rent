<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="form-group my-3">
      <label for="book-search">Search book infos</label>
      <div class="input-group">
        <input type="text" class="form-control" id="book-search" placeholder="Harry potter and the sorcerer's stone">
        <div class="input-group-append">
          <button class="btn btn-outline-success my-2 my-sm-0 mr-2 float-right" id="autocomplete" type="button">Autocomplete</button>
        </div>
      </div>
    </div>
    <div class="col-md-6 bg-light rounded shadow-sm p-4 mb-5">
      <h2>Lend a new book!</h2>
        <%= render 'form', book: @book %>
    </div>
    <div class="d-flex align-items-center">
      <center><img src="" alt="" id="cover" width="200px"></center>
    </div>
  </div>
</div>
