<div class="container mt-3">
  <div class="row">
    <div class="col-8 d-flex flex-column">
      <div class="book-show-card">
        <div class="d-flex justify-content-between">
          <div class="mr-3">
          <%= cl_image_tag @book.photo.key, height: 170, crop: :fill %>
          </div>
          <div>
            <h1><%= @book.title %></h1>
            <h2><%= @book.author %></h2>
            <p><%= @book.published_date %></p>
          </div>
        </div>
        <p> ğŸ‘‰ <%= @book.description %></p>
      </div>
      <div class="book-show-card">
        <% @book.reviews.each do |review| %>
        <p>
          <%= review.content %>
          <footer class="blockquote-footer text-left mb-1"><%= review.user.first_name %></footer>
          <% if policy(review).update? %>
             <button type="button" class="m-3 btn btn-outline-dark" data-toggle="modal" data-target="#EditReview<%= review.id %>">
              <i> ğŸ“ </i>
            </button>
            <%= render "reviews/edit_form_modal", review: review, id: "EditReview#{review.id}" %>
          <% end %>
        </p>
        <% end %>
      <button type="button" class="m-3 btn btn-outline-dark" data-toggle="modal" data-target="#AddReview">
        Ajouter un commentaire
      </button>
      </div>
    </div>
    <div class="col-4 d-flex flex-column">
      <div class="book-show-card">
        <p> <strong> â­ï¸ Ratings : </strong> <%= @book.rating %></p>
        <p> <strong> ğŸ“• Publisher : </strong> <%= @book.publisher %></p>
        <p> <strong> ğŸ“š Category : </strong> <%= @book.category %></p>
        <p> <strong> ğŸ’ Lender : </strong> <%= @book.lender.first_name %></p>
        <P> <strong> ğŸ“Œ Where to pick the book :</strong> <%=  @book.address %> </P>

        <% if policy(@book).destroy? %>
          <%= link_to book_path(@book), method: :delete, data: { confirm: "Confirmez-vous la suppression ?" } do %>
            <i class="fa fa-trash destroy_dose"></i>
          <% end %>
        <% end %>
      </div>
      <div class="book-show-card">
        <%= simple_form_for [@book, @booking] do |f|%>
        <%= f.input :begin_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_start"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_end"} %>
        <%= f.button :submit, "RÃ©server " ,class: "btn btn-outline-dark" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

