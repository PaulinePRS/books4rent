<%= simple_form_for(book) do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :published_date, as: :date, html5: true %>
  <%= f.input :rating, collection: 1..5 %>
  <%= f.input :publisher %>
  <%= f.input :category %>
  <%= f.input :photo, label: :Cover, as: :file %>
  <%= f.button :submit, 'Lend book', class:"btn btn-outline-success my-2 my-sm-0 mr-2 float-right" %>
<% end %>
