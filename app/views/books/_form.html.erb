<%= simple_form_for(book) do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :published_date, as: :date, html5: true %>
  <%= f.input :rating, collection: [1, 1.5, 2, 2.5, 3, 3.5, 4, 4.5, 5] %>
  <%= f.input :publisher %>
  <%= f.input :category %>
  <%= f.input :description, label: "Summary" %>
  <%= f.input :address,label: "Location where to get the book? ðŸ“Œ" %>
  <%= f.input :photo, label: :Cover, as: :file %>
  <input type="text" value="" id="isbn">
  <%= f.button :submit, 'Lend book', class:"btn btn-outline-success my-2 my-sm-0 mr-2 float-right" %>
  <div class="btn btn-outline-success my-2 my-sm-0 mr-2 float-right" id="autocomplete">Autocomplete</div>
<% end %>
