<h2 class="text-center font-weight-bold p-5">Do you love fiction ?</h2>

<div class="container mt-3">
  <div class=" d-flex justify-content-around">
    <% @books_cat1.each do |book| %>
    <div class="col-3">
      <div class="card-style grow">
        <div class="card-img-thumbnail">
          <% if book.photo.attached? %>
            <%= cl_image_tag book.photo.key, height: 250, width: 200 %>
          <% else %>
            <%= image_tag book.cover_url, height: 250, width: 200 %>
          <% end %>
        </div>
        <div class="p-2 mt-4">
          <%= link_to book_path(book) do %>
            <h1><%= book.title %></h1>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

