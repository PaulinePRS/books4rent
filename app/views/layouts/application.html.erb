<!DOCTYPE html>
<html>
  <head>
    <title>Books4rent</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon align-items-center">
        <%= link_to root_path, class: "navbar-brand align-items-center" do %>
          <i class="fas fa-book-open"></i>
        <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto align-items-center">
          <li class="nav-item">
            <div>
              <%= link_to "Lend a book", books_path, class:"btn btn-sm btn-outline-primary mr-2" %>
            </div>
          </li>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Top Books", books_path, class: "nav-link"%>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag("avatar.png", id: "navbarDropdown", class: "avatar dropdown-toggle", data: {toggle: "dropdown"}, aria: {haspopup: "true", expanded: "false"}) %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Sign in", new_user_session_path, class:"dropdown-item" %>
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"dropdown-item" %>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <%= render 'shared/flashes' %>

    <%= yield %>


  </body>
</html>
