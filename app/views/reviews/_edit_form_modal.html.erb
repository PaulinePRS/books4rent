<div class="modal fade" id="<%= id %>" tabindex="-1" role="dialog" aria-labelledby="reviewModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reviewModalTitle">Modify your review</h5>
      </div>
      <div class="modal-body">
        <%= simple_form_for review do |f| %>
        <%= f.input :content %>
        <%= f.input :ratings, collection: [1, 1.5, 2, 2.5, 3, 3.5, 4, 4.5, 5]  %>
        <%= f.button :submit, class: "btn btn-outline-dark" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
